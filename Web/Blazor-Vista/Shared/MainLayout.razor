@inherits /*En la linea 14, todo eso sirve para poder acceder al codigo de usuario que inicio sesion.si esta loggeada tendr la autorizacion, sino le sladra un mensjae para que ingrese sesion */ LayoutComponentBase 


<PageTitle>Lenguaje 3 </PageTitle>

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <AuthorizeView>
                <Authorized>
                    <span class="ml-md-auto">
                        Usuario Conectado: @context.User.Claims.First().Value
                        <a href="/salir">Cerrar Sesion</a>
                    </span>
                </Authorized>
                <NotAuthorized>
                    <a href="login">Inciar Sesion</a>

                </NotAuthorized>
            </AuthorizeView>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>
